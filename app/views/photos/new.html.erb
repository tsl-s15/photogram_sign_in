<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Create a new photo</h1>

      <% if @photo.errors.present? %>
        <ul>
          <% @photo.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_tag photos_url do %>
      <!-- <form action="/create_photo" class="form-horizontal"> -->
        <div class="form-group">
          <label for="source" class="col-sm-2 control-label">Source</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="source" name="source" placeholder="http://www.images.com/your_image.jpg" value="<%= @photo.source %>">
          </div>
        </div>
        <div class="form-group">
          <label for="caption" class="col-sm-2 control-label">Caption</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="caption" name="caption" placeholder="caption for image" value="<%= @photo.caption %>">
          </div>
        </div>

        <div class="form-group">
          <input type="hidden" name="user_id" value="<%= current_user.id %>">
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </div>
      <!-- </form> -->
      <% end %>
    </div>
  </div>
</div>



